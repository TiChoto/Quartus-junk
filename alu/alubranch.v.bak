module alubranch (
    input [3:0] A,          
    input [3:0] B,        
    input [2:0] opcode,     // opcode: 000=ADD, 001=SUB, 010=AND, 011=OR, 100=SLT
    output reg [3:0] result,
    output zero             // Used for beq/bne
);

    wire [4:0] add_result = A + B;
    wire [4:0] sub_result = A - B;

    assign zero = (A == B);  // directly used by control unit to branch

    always @(*) begin
        case (opcode)
            3'b000: result = add_result[3:0];             // ADD
            3'b001: result = sub_result[3:0];             // SUB
            3'b010: result = A & B;                       // AND
            3'b011: result = A | B;                       // OR
            3'b100: result = (sub_result[4]) ? 4'b1 : 4'b0; // SLT (signed)
            default: result = 4'b0;
        endcase
    end

endmodule
